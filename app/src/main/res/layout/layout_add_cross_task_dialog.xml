<?xml version="1.0" encoding="utf-8"?>
<com.inspur.playwork.view.timeline.addtask.AddCrossDayRootView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_main"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:layout_marginLeft="-4dp"
            android:layout_marginStart="-4dp"
            >

            <TextView
                android:id="@+id/tv_task_start_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/selector_chose_time"
                android:ems="3"
                android:paddingLeft="1.5dp"
                android:paddingStart="1.5dp"
                android:gravity="center_vertical"
                android:text="下午"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <!--    <TextView
                    android:id="@+id/tv_link"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:text="~"
                    android:textColor="@color/black"
                    android:textSize="15sp" />-->

            <TextView
                android:id="@+id/tv_task_end_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/selector_chose_time"
                android:ems="3"
                android:paddingLeft="6dp"
                android:paddingStart="6dp"
                android:gravity="center"
                android:text="下午"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_link"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="~"
            android:gravity="center"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp"
            />
    </FrameLayout>


    <View
        android:id="@+id/depart_view"
        android:layout_width="1px"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="3dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="3dp"
        android:layout_marginStart="7dp"
        android:background="@color/black_lower" />

    <com.inspur.playwork.view.timeline.addtask.KeyEventEditText
        android:id="@+id/edit_input_task_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_weight="7"
        android:background="@null"
        android:cursorVisible="true"
        android:gravity="center_vertical"
        android:hint="这里输入任务内容"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/text_gray"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/btn_confrim"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@null"
        android:contentDescription="@null"
        android:padding="5dp"
        android:src="@drawable/selector_confrim_add" />

</com.inspur.playwork.view.timeline.addtask.AddCrossDayRootView>

