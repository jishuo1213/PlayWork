<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@drawable/touchable_background_white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bgColor"
            >

            <TextView
                android:id="@+id/mail_head_avatar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/wy_avatar_bg_1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textIsSelectable="false"
                android:textSize="24sp"
                tools:text="J" />

            <TextView
                android:id="@+id/mail_head_unread_dot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="2dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/mail_head_avatar"
                android:background="@drawable/unread_dot"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/mail_head_signed_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="11dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/signature"
                />

            <ImageView
                android:id="@+id/mail_head_encrypt_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/mail_safe_option"
                android:layout_alignParentRight="true"
                android:layout_marginTop="11dp"
                android:layout_marginRight="30dp"
                />

            <ImageView
                android:id="@+id/mail_head_attachment_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/write_mail_attachment_down"
                android:layout_marginTop="13dp"
                android:layout_marginRight="54dp"
                android:layout_alignParentRight="true"
                />

            <ImageView
                android:id="@+id/mail_head_marked_star"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/wy_mail_list_marked"
                android:layout_marginTop="12dp"
                android:layout_marginRight="74dp"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:id="@+id/mail_head_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="90dp"
                android:layout_toRightOf="@id/mail_head_unread_dot"
                android:textColor="@color/wy_common_text_dark_color"
                android:textIsSelectable="false"
                android:textSize="18sp"
                android:singleLine="true"
                tools:text="邮件发件人ladshflakfalkfalkshfjlasjfaflasfjlk" />

            <TextView
                android:id="@+id/mail_head_send_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送时间"
                android:textColor="@color/wy_common_text_color"
                android:textIsSelectable="false"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/mail_head_sender"/>

            <TextView
                android:id="@+id/mail_head_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mail_head_sender"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/mail_head_avatar"
                android:layout_toLeftOf="@+id/mail_head_send_time"
                android:maxLines="2"
                android:textColor="@color/wy_common_text_color"
                android:textIsSelectable="false"
                android:textSize="16sp"
                tools:text="邮件主题asgsgaa飒飒大声道萨达十大"/>
            <ProgressBar
                android:id="@+id/sentProgressBar"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:progress="0"
                style="@style/HZ_Progress"/>
            <!--android:visibility="gone"-->
        </RelativeLayout>

</LinearLayout>