<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/setting_item_selector">


    <ImageView
        android:id="@+id/iv_vchat_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="13dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="13dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/chat_list_avatar_bg"
        android:contentDescription="@null"
        android:padding="1.5dp"
        android:src="@drawable/icon_chat_default_avatar" />


    <TextView
        android:id="@+id/tv_last_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_vchat_avatar"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="3dp"
        android:gravity="center_horizontal"
        android:text="@string/message_item_time"
        android:textColor="@color/message_item_gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_vchat_avatar"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/iv_vchat_avatar"
        android:layout_toLeftOf="@id/tv_last_chat_time"
        android:layout_toRightOf="@id/iv_vchat_avatar"
        android:layout_toStartOf="@id/tv_last_chat_time"
        android:singleLine="true"
        android:text="@string/message_item_name"
        android:textColor="#353535"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_last_send_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_vchat_avatar"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_toEndOf="@id/iv_vchat_avatar"
        android:layout_toRightOf="@id/iv_vchat_avatar"
        android:singleLine="true"
        android:text="内容"
        android:textColor="@color/message_item_gray"
        android:textSize="13sp" />

    <View
        style="@style/common_horizontal_dividing_line_style"
        android:layout_alignParentBottom="true" />
</RelativeLayout>