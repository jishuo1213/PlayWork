<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_week_plan_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="第2周计划"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_week_plan_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_week_plan_name"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="2017.01.09-2017.01.15" />

        <TextView
            android:id="@+id/tv_plan_from_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_week_plan_date"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="报送人:" />

        <TextView
            android:id="@+id/tv_plan_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_week_plan_date"
            android:layout_toEndOf="@id/tv_plan_from_label"
            android:layout_toRightOf="@id/tv_plan_from_label"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="江国福" />

        <TextView
            android:id="@+id/tv_plan_to_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_week_plan_date"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/tv_plan_from"
            android:layout_toRightOf="@id/tv_plan_from"
            android:gravity="center"
            android:padding="5dp"
            android:text="主报:" />

        <TextView
            android:id="@+id/tv_plan_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_week_plan_date"
            android:layout_toEndOf="@id/tv_plan_to_label"
            android:layout_toRightOf="@id/tv_plan_to_label"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="樊继硕" />

        <TextView
            android:id="@+id/tv_plan_share_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_plan_from_label"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="共享:" />

        <TextView
            android:id="@+id/tv_plan_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_plan_from_label"
            android:layout_toEndOf="@id/tv_plan_share_label"
            android:layout_toRightOf="@id/tv_plan_share_label"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="董晨晨,邵帅,孙源" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
