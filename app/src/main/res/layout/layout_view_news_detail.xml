<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="法律手段及开发拉萨的积分拉萨看大家反馈拉萨的积阿斯顿发射的发射的发送仿盛大阿斯顿发射的发射的发发士大夫山东省打分拉萨的积分卡拉撒"
                android:textColor="@color/key_text"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="2017-01-01"
                android:textSize="12sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <com.inspur.playwork.view.common.VpSwipeRefreshLayout
        android:id="@+id/refresh_content_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!--<WebView-->
        <!--android:id="@+id/web_main_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->


        <android.support.v4.view.ViewPager
            android:id="@+id/web_main_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />
    </com.inspur.playwork.view.common.VpSwipeRefreshLayout>

    <!--<WebView-->
    <!--android:id="@+id/web_main_view"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp" />-->

</LinearLayout>