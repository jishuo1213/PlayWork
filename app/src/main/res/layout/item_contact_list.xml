            <!--android:text="@string/message_item_name"-->
            <!--android:textColor="@color/text_gray"-->
            <!--android:textSize="13sp" />-->
    </RelativeLayout>

    <View style="@style/common_horizontal_dividing_line_style" />

</LinearLayout>
