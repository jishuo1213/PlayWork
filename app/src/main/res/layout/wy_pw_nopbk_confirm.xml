<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical"
    android:background="@color/whitesmoke">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/msg_state_fail_resend_pressed"/>
        <TextView
            android:id="@+id/wy_pop_window_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:textSize="16dp"
            android:text="微邮加密此邮件时遇到问题，因为下列收件人的证书丢失或无效，或者他们的证书与加密功能冲突或不支持加密功能"
            android:textColor="@color/key_text"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/wy_grey_border_style">
        <TextView
            android:id="@+id/wy_pw_nopbk_emails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:textColor="@color/key_text"/>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="6dp"
        android:textSize="16dp"
        android:text="点击“继续”按钮可加密并发送邮件，但所列出的收件人可能将无法阅读此邮件"
        android:textColor="@color/key_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="5dp">
        <Button
            android:id="@+id/wy_send_no_encrypt_btn"
            android:minWidth="150dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="发送不加密邮件"
            android:textSize="@dimen/mail_detail_info_text_size"
            android:textColor="@color/wy_common_text_color"/>
        <Button
            android:id="@+id/wy_continue_send_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="继续"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/mail_detail_info_text_size"
            android:textColor="@color/wy_common_text_color"/>
        <Button
            android:id="@+id/wy_cancel_send_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="取消"
            android:textSize="@dimen/mail_detail_info_text_size"
            android:textColor="@color/wy_common_text_color"/>
    </LinearLayout>

</LinearLayout>