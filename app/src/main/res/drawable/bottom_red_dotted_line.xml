<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the line -->
    <item
        android:right="10dp"
        android:left="10dp">
        <shape>
            <padding
                android:bottom="2px"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
            <stroke
                android:width="1dp"
                android:color="@color/dotted_red"
                android:dashGap="2dp"
                android:dashWidth="2dp" />
        </shape>
    </item>
    <!-- This is the main color -->
    <item>
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>